                            <ColumnDefinition Width="30"></ColumnDefinition>
                            <ColumnDefinition Width="99*"></ColumnDefinition>
                            <ColumnDefinition Width="94*"></ColumnDefinition>
                            <ColumnDefinition Width="80*"></ColumnDefinition>
                            <ColumnDefinition Width="86*"></ColumnDefinition>
                            <ColumnDefinition Width="121*"></ColumnDefinition>
                            <ColumnDefinition Width="65*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Content="▢"
                       Grid.Column="0"
                       Foreground="#828282" 
                       FontSize="16" 
                       FontWeight="Black"
                       Margin="0,5,0,0"/>
                        <Label x:Name="LbFwFilenameFirst"
                       Content="Filename" 
                       Grid.Column="1"
                       Foreground="#333333" 
                       FontSize="16" 
                       FontWeight="Normal"
                       Margin="0,5,0,0"/>
                        <Label x:Name="LbFwVerFirst"
                       Content="00.00.00" 
                       Grid.Column="2"
                       Foreground="#333333" 
                       FontSize="16" 
                       FontWeight="Normal"
                       Margin="0,5,0,0"/>
                        <Label x:Name="LbFwDateFirst"
                       Content="01.01.01" 
                       Grid.Column="3"
                       Foreground="#333333" 
                       FontSize="16" 
                       FontWeight="Normal"
                       Margin="0,5,0,0"/>
