                        <Label Content="▢"
                               Grid.Column="0"
                               Foreground="#828282" 
                               FontSize="16" 
                               FontWeight="Black"
                               Margin="0,5,0,0"/>
                        <Label x:Name="LbFwFilenameSecond"
                               Content="Filename" 
                               Grid.Column="1"
                               Foreground="#333333" 
                               FontSize="16" 
                               FontWeight="Normal"
                               Margin="0,5,0,0"/>
                        <Label x:Name="LbFwVerSecond"
                               Content="00.00.00" 
                               Grid.Column="2"
                               Foreground="#333333" 
                               FontSize="16" 
                               FontWeight="Normal"
                               Margin="0,5,0,0"/>
                        <Label x:Name="LbFwDateSecond"
                               Content="01.01.01" 
                               Grid.Column="3"
                               Foreground="#333333" 
                               FontSize="16" 
                               FontWeight="Normal"
                               Margin="0,5,0,0"/>
                        <Label x:Name="LbFwTimeSecond"
                               Content="00:00:00" 
                               Grid.Column="4"
                               Foreground="#333333" 
                               FontSize="16" 
                               FontWeight="Normal"
                               Margin="0,5,0,0"/>
