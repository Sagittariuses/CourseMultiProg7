                               Content="Персональное" 
                               Grid.Column="5"
                               Foreground="#333333" 
                               FontSize="16" 
                               FontWeight="Normal"
                               Margin="1,5,0,0"/>
                        <Button 
                            x:Name="BtnClearFirmwareSecond"
                            Grid.Column="6" 
                            Background="{x:Null}" 
                            BorderThickness="0"
                            Click="BtnClearFirmwareSecond_Click">
                            <Path Fill="#486FEF"
                                 Data="M3.99998 12.6667C3.99998 13.0203 4.14046 13.3594 4.3905 13.6095C4.64055 13.8595 4.97969 14 5.33331 14H10.6666C11.0203 14 11.3594 13.8595 11.6095 13.6095C11.8595 13.3594 12 13.0203 12 12.6667V4.66667H3.99998V12.6667ZM5.33331 6H10.6666V12.6667H5.33331V6ZM10.3333 2.66667L9.66665 2H6.33331L5.66665 2.66667H3.33331V4H12.6666V2.66667H10.3333Z"/>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
            <Border Grid.Row="3" BorderThickness="0,0,0,0" BorderBrush="#EAEEF1" Margin="25,0,0,0">
                <Grid>
                    <Grid x:Name="GridChooseFwThird" Grid.Row="3"  Visibility="Visible">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button
                             x:Name="BtnChooseFwFilePlusThird"
                             Background="{x:Null}"
                             Content="+"
                             FontSize="30"
                             Height="40"
                             Foreground="#486FEF"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Center"
                             BorderThickness="0"
                             Click="BtnChooseFwFilePlusThird_Click" Width="40"/>
                        <Button
                            Grid.Column="1"
                             x:Name="BtnChooseFwFileThird"
                             Background="{x:Null}"
                             Content="Выбрать файл прошивки"
                             FontSize="14"
                             Height="40"
                             Foreground="#486FEF"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Center"
                             BorderThickness="0"
                             Click="BtnChooseFwFilePlusThird_Click"/>

                    </Grid>
                    <Grid x:Name="GridFwThird" Visibility="Hidden" 
                          Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"></ColumnDefinition>
                            <ColumnDefinition Width="99*"></ColumnDefinition>
                            <ColumnDefinition Width="94*"></ColumnDefinition>
                            <ColumnDefinition Width="80*"></ColumnDefinition>
                            <ColumnDefinition Width="86*"></ColumnDefinition>
                            <ColumnDefinition Width="121*"></ColumnDefinition>
                            <ColumnDefinition Width="65*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Content="▢"
                       Grid.Column="0"
                       Foreground="#828282" 
                       FontSize="16" 
                       FontWeight="Black"
                       Margin="0,5,0,0"/>
                        <Label x:Name="LbFwFilenamThird"
                       Content="Filename" 
                       Grid.Column="1"
                       Foreground="#333333" 
                       FontSize="16" 
                       FontWeight="Normal"
                       Margin="0,5,0,0"/>
                        <Label x:Name="LbFwVerThird"
                       Content="00.00.00" 
                       Grid.Column="2"
                       Foreground="#333333" 
                       FontSize="16" 
                       FontWeight="Normal"
                       Margin="0,5,0,0"/>
